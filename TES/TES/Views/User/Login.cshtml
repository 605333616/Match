@{
    Layout = null;
}

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/css/main.css" rel="stylesheet" type="text/css" />
    <title>账号登录</title>
</head>


<body>
    <div id="bg">
        <div id="login_wrap">
            <div id="login">
                <div id="status">
                    <i>Login</i>
                </div>
                <span>
                    <form action="post">
                        <p class="form">

                        </p>
                        
                        @using (Html.BeginForm())
                        {
                            <div class="divLoginLine">
                                <p class="form"><input id="Account" name="Account" maxlength="10" placeholder="学号" /></p>
                            </div>
                            <div class="divLoginLine">
                                <p class="form"><input id="Password" name="password" type="password" maxlength="10" placeholder="密码" /></p>
                            </div>
                            <div class="divButton divLoginLine">
                                <div id="divAjax">
                                    <input onclick="OnAJXBegin()" id="btnLogin" value="登录" type="button" class="btn" style="margin-right: 20px;" />
                                </div>
                            </div>
                        }
                        
                    </form>
                    <a href="#">Forget your password?</a>
                </span>
            </div>
            <div id="login_img">
                @*图片绘制框*@
                <span class="circle">
                    <span></span>
                    <span></span>
                </span>
                <span class="star">
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                    <span></span>
                </span>
                <span class="fly_star">
                    <span></span>
                    <span></span>
                </span>
                <p id="title">
                    <i>教</i>
                    <i>师</i>
                    <i>评</i>
                    <i>价</i>
                    <i>系</i>
                    <i>统</i>
                </p>
            </div>
        </div>
    </div>

    <script type="text/javascript">
        function CheckPage() {
            var loginName = $("#Account").val();
            if (loginName.length < 1) {
                alert("用户名不能为空");
                $("#Account").focus();
                return false;
            }
            var pwd = $("#Password").val();
            if (pwd.length < 1) {
                alert("密码不能为空");
                $("#Password").focus();
                return false;
            }
            return true;
        }
    </script>
    <script type="text/javascript">
        function OnAJXBegin() {
            if (CheckPage()) {
                var account = $("#Account").val();
                var pwd = $("#Password").val();
                $.ajax({
                    type: "post",
                    url: "Login",
                    data: { account: account, pwd: pwd },
                    success: function (data, textStatus) {
                        OnComplete(data);
                    },
                    error: function () {
                        alert("系统错误，无法登录，请与管理员联系!\n");
                    }
                });
            }
        }

        function OnComplete(result) {
            if (result == "0") {
                alert("用户名或密码错误");
            }
            else {
                window.parent.location.href = "@Url.Content("~/Home/Index")";
            }
        }

    </script>
</body>
</html>